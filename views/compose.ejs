<%- include("partials/header"); -%>

<div class="container">
    <h3 class="h3">Shop From The Best Collections! </h3>
    <form action="/compose" method="POST" enctype="multipart/form-data">
      <div class="form-group">
<label for="pi" class="color-text">Product Id:</label>
<input type="text" class="form-control" id="pi" name="productId" required minlength="3">
</div>

                               <div class="form-group">
            <label for="imge" class="color-text"> Image1:</label>
            <input type="file" id="imge" name="img" accept="image/*" max-size="2000">
                      <label for="imge" class="color-text">Image2:</label>
                      <input type="file" id="imge" name="img" accept="image/*" max-size="2000">
                      </div>

                      <div class="form-group">
          <label for="pd" class="color-text">Product discount:</label>
      <input type="text" class="form-control" id="pd" name="productdisc" required minlength="3">
                      </div>
                      <div class="form-group">
              <label for="pn" class="color-text">Product Name:</label>
  <input type="text" class="form-control" id="pn" name="productName" required minlength="8" maxlength="20">
                      </div>

                      <div class="form-group">
        <label for="pd" class="color-text">Product Description:</label>
  <textarea class="form-control" rows="5" minlength="20" id="pd" name="productDescription" required></textarea>
                      </div>
                      <div class="form-group">
          <label for="pp" class="color-text blockelement">Price1:</label>
            <input type="num" id="pp" name="price1" required>

<label for="pp" class="color-text blockelement">Price2:</label>
<input type="num" id="pp" name="price2" required>
</div>
<div class="form-group">
<div class="form-group">
<label for="cat" class="color-text">Product category</label>
<select class="form-control" id="cat" name="category">
<option>1</option>
<option>2</option>
<option>3</option>
<option>4</option>
</select>
</div>
</div>
<div class="form-group">
<label for="pps" class="color-text blockelement">Pieces:</label>
<input type="text" id="pps" name="pieces" required>
</div>
<button type="submit" class="btn btn-success">Submit</button>
</form>
</div>

<%- include("partials/footer"); -%>
